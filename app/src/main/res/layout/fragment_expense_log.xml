<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".expenses.ExpenseManager">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="@drawable/expense_manager_row_border"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/user_from_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            app:srcCompat="@drawable/user_colored_circle_54" />

        <TextView
            android:id="@+id/expense_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/log_expense_verb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=" owes you"
            android:textColor="#000000"
            android:textSize="14sp" />

        <com.blackcat.currencyedittext.CurrencyEditText
            android:id="@+id/user_from_amount"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:background="#00FFFFFF"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:linksClickable="false"
            android:longClickable="false"
            android:paddingStart="4dp"
            android:textSize="14sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/expense_container_list"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:paddingTop="8dp" />

</LinearLayout>
